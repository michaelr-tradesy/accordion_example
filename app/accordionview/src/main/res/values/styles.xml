<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="header_foreground_text_color">#FF808080</color>
    <color name="header_background_text_color">#FFC0C0C0</color>

    <style name="AppTheme" parent="Platform.MaterialComponents"/>

    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        @null
    </style>

    <style name="AccordionView" parent="AppTheme">
    </style>

    <style name="AccordionView.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="AccordionView.Divider">
        <item name="android:background">#80DEDEDE</item>
    </style>

    <style name="AccordionView.RangeSlider">
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>

    <style name="AccordionView.Header" />

    <style name="AccordionView.Header.Background">
        <item name="android:background">@color/header_background_text_color</item>
        <item name="android:windowBackground">@color/header_background_text_color</item>
        <item name="android:colorBackground">@color/header_background_text_color</item>
    </style>

    <style name="AccordionView.Header.Foreground">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/header_foreground_text_color</item>
    </style>

    <style name="AccordionView.Title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="AccordionView.Title.Color">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="AccordionView.Details">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>