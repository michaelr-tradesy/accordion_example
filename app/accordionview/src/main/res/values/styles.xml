<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        @null
    </style>

    <style name="AccordionView" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="AccordionView.EditText">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AccordionView.Divider">
        <item name="android:background">#80DEDEDE</item>
    </style>

    <style name="AccordionView.RangeSlider">
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>

    <style name="AccordionView.Title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AccordionView.Title.Color">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="AccordionView.Details">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme" parent="AccordionView.NoActionBar">

    </style>

    <style name="AccordionView.NoActionBar">
    </style>

</resources>